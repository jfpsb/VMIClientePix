<Window x:Class="VMIClientePix.View.VMISplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VMIClientePix.View"
        mc:Ignorable="d"
        Title="TelaInicial"
        Height="300"
        Width="600"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <StackPanel Background="#CE1F24">
        <Image Margin="5"
               Height="250"
               Source="/View/Imagens/SplashScreen.png" />
        <Label Content="carregando aplicação. aguarde"
               HorizontalContentAlignment="Center"
               FontSize="18.5"
               FontFamily="{StaticResource GothamBold}"
               Foreground="White" />
    </StackPanel>
</Window>
