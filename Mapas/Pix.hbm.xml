<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="VMIClientePix"
                   namespace="VMIClientePix.Model">

	<class name="Pix" table="pix">
		<id name="Txid" />
		<many-to-one name="Pagador" class="VMIClientePix.Model.Pagador" cascade="save-update" />
		<many-to-one name="Cobranca" class="VMIClientePix.Model.Cobranca" />
		<property name="EndToEndId" />
		<property name="Valor" />
		<property name="Horario" />
		<property name="InfoPagador" />

		<bag name="Devolucoes" table="devolucao" inverse="true" cascade="all-delete-orphan">
			<key column="pix" />
			<one-to-many class="VMIClientePix.Model.Devolucao"/>
		</bag>
	</class>

</hibernate-mapping>
